ARG PLATFORM=ubuntu
ARG PLATFORM_VERSION=22.04

FROM $PLATFORM:$PLATFORM_VERSION

ARG PLATFORM=ubuntu
ARG PLATFORM_VERSION=22.04
ARG ARCH=amd64
ARG VERSION=3.1.0
ARG EDITION=enterprise

COPY . /opt/app
WORKDIR /opt/app

RUN ./scripts/verify_deb_prepare.sh $ARCH

ENV PLATFORM_NAME=$PLATFORM$PLATFORM_VERSION
ENV ARCH=$ARCH
ENV VERSION=$VERSION
ENV EDITION=$EDITION

CMD ./scripts/verify_deb.sh $PLATFORM_NAME $ARCH $VERSION $EDITION
